{
   "compilerOptions": {
      "lib": [
         "dom",
         "dom.iterable",
         "esnext"
      ],
      "allowJs": true,
      "declaration": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "noImplicitAny": false,
      "strictNullChecks": false,

      "target": "es5",
      "module": "esnext",
      "jsx": "react",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": ["src"],
   "exclude": [
      "node_modules",
      "build",
      "dist",
      "rollup.config.js",
      "webpack.config.js",
      "jest.config.js"
   ]
}
